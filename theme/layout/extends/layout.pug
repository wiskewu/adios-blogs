extends ./mixins.pug

//- render
block rootpage
    -
        var sitename = siteinfo.name;
        var title = sitename;
        if (post && post.title) {
            title = sitename + ' - ' + post.title;
        } else if (pageTitle) {
            title = pageTitle;
        }

    html(lang='zh')
        head
            title #{title}
            meta(name='viewport', content='width=device-width, initial-scale=1')
            include ../includes/seo.pug
            include ../includes/purecss.pug
            link(rel="stylesheet", href=utils.resolveRes('statics/css/theme.css'))
            link(rel="stylesheet", href=utils.resolveRes('statics/css/layout.css'))
            block head
        body.theme-light
            div#app
                div#app-container
                    block app
                        block apphead
                            include ../includes/apphead.pug
                        block appbody
                        block appfoot
                            include ../includes/appfoot.pug

        script(src=utils.resolveRes("statics/js/main.js"))